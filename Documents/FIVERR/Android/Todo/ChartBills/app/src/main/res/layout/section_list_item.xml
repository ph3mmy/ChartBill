<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="-7dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginStart="-2dp"
        android:layout_marginEnd="-2dp"
        app:cardCornerRadius="0dp"
        app:cardElevation="2dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">


        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:weightSum="4">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_weight="3.9"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvSectionItemTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="Prudential"
                    android:textColor="@color/my_gray"/>

                <TextView
                    android:id="@+id/tvSectionItemAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="$200"
                    android:textColor="@color/my_gray"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:id="@+id/tvSectionItemDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3 days ago"
                        android:layout_marginEnd="5dp"
                        android:textColor="@color/red_button_color"
                        android:textSize="14sp"
                        android:layout_marginRight="5dp" />

                    <ImageView
                        android:id="@+id/ivRecyclerRepeat"
                        android:layout_width="20dp"
                        android:layout_height="18dp"
                        android:src="@drawable/ic_repeat_recyc"/>

                    <ImageView
                        android:id="@+id/ivRecyclerMemo"
                        android:layout_width="wrap_content"
                        android:layout_height="18dp"
                        android:paddingLeft="-10dp"
                        android:paddingStart="-10dp"
                        android:src="@drawable/ic_description_black_recyc"/>

                </LinearLayout>
            </LinearLayout>


            <ImageView
                android:id="@+id/tvSectionItemImage"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:padding="5dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="0"
                android:contentDescription="@string/red_button"
                android:src="@drawable/red_button1" />

        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>