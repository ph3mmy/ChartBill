<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorGrayBg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp"
        >

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="6dp"
            app:cardPreventCornerOverlap="true"
            app:cardElevation="0.5dp"
            app:cardUseCompatPadding="false"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp">


            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="0dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tvAdminTicketId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="5dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textStyle="bold"
                        android:text="Campaign Title"
                        android:layout_gravity="center_vertical" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3"
                        android:layout_marginTop="2dp">
                        <TextView
                            android:layout_weight="1.6"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:layout_marginStart="10dp"
                            android:layout_marginLeft="10dp"
                            android:textColor="#78909c"
                            android:textStyle="normal"
                            android:text="In Campaign:"
                            android:layout_gravity="center_vertical"/>

                        <TextView
                            android:id="@+id/tvAdminTicketCampTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:layout_marginStart="5dp"
                            android:layout_marginLeft="5dp"
                            android:textColor="@color/colorDarkGray"
                            android:textStyle="normal"
                            android:text="xhxhxjxj"
                            android:layout_gravity="center_vertical"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3"
                        android:layout_marginTop="2dp">
                        <TextView
                            android:layout_weight="1.6"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:layout_marginStart="10dp"
                            android:layout_marginLeft="10dp"
                            android:textColor="#78909c"
                            android:textStyle="normal"
                            android:text="Ticket Status:"
                            android:layout_gravity="center_vertical"/>

                        <TextView
                            android:id="@+id/tvAdminTicketStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:layout_marginStart="5dp"
                            android:layout_marginLeft="5dp"
                            android:textColor="@color/colorDarkGray"
                            android:textStyle="normal"
                            android:text="Valid"
                            android:layout_gravity="center_vertical"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3"
                        android:layout_marginTop="5dp">
                        <TextView
                            android:layout_weight="1.6"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:layout_marginStart="10dp"
                            android:layout_marginLeft="10dp"
                            android:textColor="#78909c"
                            android:textStyle="normal"
                            android:text="Ticket Type"
                            android:layout_gravity="center_vertical"/>

                        <TextView
                            android:id="@+id/tvAdminTicketType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:layout_marginStart="5dp"
                            android:layout_marginLeft="5dp"
                            android:textColor="@color/colorDarkGray"
                            android:textStyle="normal"
                            android:text="0"
                            android:layout_gravity="center_vertical"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="5dp">
                        <TextView
                            android:layout_weight="1.6"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:layout_marginStart="10dp"
                            android:layout_marginLeft="10dp"
                            android:textColor="#78909c"
                            android:textStyle="normal"
                            android:text="Generated by:"
                            android:layout_gravity="center_vertical"/>

                        <TextView
                            android:id="@+id/tvAdminTicketGenBy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:layout_marginStart="5dp"
                            android:layout_marginLeft="5dp"
                            android:textColor="@color/colorDarkGray"
                            android:textStyle="normal"
                            android:text="Admin"
                            android:layout_gravity="center_vertical"/>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_margin="2dp"
                        android:background="@color/colorGrayBg" />

                    <TextView
                        android:id="@+id/tvAdminDateGen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12/09/2017"
                        android:textColor="#bdbdbd"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="-15dp"
                        android:layout_marginLeft="20dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:padding="3dp"
                        android:layout_gravity="end"
                        android:orientation="horizontal"
                        android:layout_marginTop="-10dp"
                        android:gravity="end|bottom">

                        <ImageView
                            android:id="@+id/ivAdminEdit"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:layout_marginStart="4dp"
                            android:layout_marginLeft="4dp"
                            android:src="@drawable/ic_edit_grey_24dp"/>
                        <ImageView
                            android:id="@+id/ivAdminDel"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:src="@drawable/ic_delete_forever_grey_48dp"/>

                    </LinearLayout>

                </LinearLayout>



            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>
</LinearLayout>