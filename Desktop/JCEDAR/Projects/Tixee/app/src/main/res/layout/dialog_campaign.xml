<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relCamp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="30dp"
        android:elevation="16dp"
        android:orientation="horizontal"
        android:background="@color/colorPrimary">

        <TextView
            android:id="@+id/tvCreateCamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CREATE CAMPAIGN"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:layout_gravity="center"/>

        <ImageView
            android:id="@+id/ivCloseDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_marginEnd="10dp"
            android:src="@drawable/abc_ic_clear_mtrl_alpha"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp" />

    </RelativeLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:background="@drawable/section_button"
        android:inputType="textPersonName"
        android:text=""
        android:padding="5dp"
        android:textColorHint="#dadada"
        android:hint="@string/enter_campaign_name"
        android:ems="10"
        android:id="@+id/etCampaignName" />

    <LinearLayout
        android:id="@+id/dialogAvailable"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginEnd="10dp"
        android:paddingEnd="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="-10dp"
        android:layout_gravity="end"
        android:weightSum="8"
        android:layout_marginRight="20dp"
        android:paddingRight="10dp">

    <TextView
        android:layout_width="0dp"
        android:layout_weight="7.5"
        android:layout_height="wrap_content"
        android:text="Available Ticket:"
        android:textColor="@color/colorGrayBg"/>
    <TextView
        android:id="@+id/tvAv"
        android:layout_width="0dp"
        android:layout_weight="0.5"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="@color/colorDarkGray"/>
</LinearLayout>
    <TextView
        android:id="@+id/tvTicketAmount"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Change Campaign Ticket Amount"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        android:layout_marginBottom="-5dp"
    android:textColor="@color/colorDarkGray"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:background="@drawable/section_button"
        android:inputType="number"
        android:padding="5dp"
        android:textColorHint="#dadada"
        android:hint="@string/enter_campaign_ticket"
        android:ems="10"
        android:id="@+id/etCampaignTicket" />

    <LinearLayout
        android:id="@+id/uploadButtonLayout"
        android:weightSum="3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:background="@drawable/section_button"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvCampaignPhoto"
            android:layout_weight="1.5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Campaign Photo"
            android:textSize="17sp"/>

        <Button
            android:id="@+id/btCampaignPhoto"
            android:layout_weight="1.5"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="Select Photo"/>

    </LinearLayout>

    <Button
        android:id="@+id/btAddCampaign"
        android:text="@string/add_campaign"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:textColor="@color/colorAccent"
        android:background="@drawable/transparent_button_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>